<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Product picture image view -->
<ImageView
android:id="@+id/productPicureImageView"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_marginEnd="12dp"
android:src="@android:drawable/sym_def_app_icon"
android:contentDescription="@string/product_picture"
android:scaleType="centerCrop" />

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical">

<!-- Product name text view -->
<TextView
    android:id="@+id/productNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/product_name_placeholder"
    android:textSize="18sp"
    android:textColor="@color/Blue"/>

<!-- Product price text view -->
<TextView
    android:id="@+id/productPriceTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/product_price_placeholder"
    android:textSize="14sp"
    android:textColor="@color/LightBlue"/>

</LinearLayout>


    <TextView
    android:id="@+id/statusIndicatorTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/status_to_buy"
    android:textColor="@android:color/white"
    android:background="@drawable/status_indicator_background"
    android:padding="8dp"
    android:textSize="12sp"
    android:layout_marginStart="16dp"
    android:gravity="center"/>

    </LinearLayout>
